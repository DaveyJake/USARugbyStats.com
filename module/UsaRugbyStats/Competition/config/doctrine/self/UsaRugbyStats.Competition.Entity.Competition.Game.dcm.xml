<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="UsaRugbyStats\Competition\Entity\Competition\Game" table="competition_competition_games">
        <id name="id" type="integer"><generator strategy="AUTO" /></id>
        <field name="name" type="string" length="60" />

        <many-to-one field="competition" target-entity="UsaRugbyStats\Competition\Entity\Competition" inversed-by="games">
        	<join-column name="competition" referenced-column-name="id" />
        </many-to-one>

        <many-to-one field="homeTeam" target-entity="UsaRugbyStats\Competition\Entity\Team">
        	<join-column name="homeTeam" referenced-column-name="id" />
        </many-to-one>

        <many-to-one field="awayTeam" target-entity="UsaRugbyStats\Competition\Entity\Team">
        	<join-column name="awayTeam" referenced-column-name="id" />
        </many-to-one>

    </entity>

</doctrine-mapping>
