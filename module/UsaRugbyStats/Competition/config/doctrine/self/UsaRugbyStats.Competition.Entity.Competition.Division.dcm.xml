<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="UsaRugbyStats\Competition\Entity\Competition\Division" table="competition_competition_divisions">
        <id name="id" type="integer"><generator strategy="AUTO" /></id>
        <field name="name" type="string" length="60" />

        <many-to-one field="competition" target-entity="UsaRugbyStats\Competition\Entity\Competition" inversed-by="divisions">
        	<join-column name="competition" referenced-column-name="id" />
        </many-to-one>
        
        <many-to-many field="teams" target-entity="UsaRugbyStats\Competition\Entity\Team">
        	<join-table name="competition_competition_division_teams">
                <join-columns>
                    <join-column name="division_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="team_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
        
    </entity>

</doctrine-mapping>