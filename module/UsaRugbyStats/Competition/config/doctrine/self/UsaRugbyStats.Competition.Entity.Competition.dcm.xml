<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="UsaRugbyStats\Competition\Entity\Competition" table="competition_competitions">
        <id name="id" type="integer"><generator strategy="AUTO" /></id>
        <field name="name" type="string" length="60" />

        <one-to-many field="divisions" target-entity="UsaRugbyStats\Competition\Entity\Competition\Division" mapped-by="competition" orphan-removal="true">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>

        <one-to-many field="games" target-entity="UsaRugbyStats\Competition\Entity\Competition\Game" mapped-by="competition" orphan-removal="true" />

        <many-to-many field="teams" target-entity="UsaRugbyStats\Competition\Entity\Team" inversed-by="competitions">
        	<join-table name="competition_competitions_teams">
                <join-columns>
                    <join-column name="competition_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="team_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
        
    </entity>

</doctrine-mapping>