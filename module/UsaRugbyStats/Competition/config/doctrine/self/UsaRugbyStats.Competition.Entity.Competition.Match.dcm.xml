<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="UsaRugbyStats\Competition\Entity\Competition\Match" table="competition_competition_matches">
        <id name="id" type="integer"><generator strategy="AUTO" /></id>

        <field name="description" type="string" length="100" />

        <many-to-one field="competition" target-entity="UsaRugbyStats\Competition\Entity\Competition" inversed-by="matches">
        	<join-column name="competition" referenced-column-name="id" />
        </many-to-one>

        <field name="date" type="datetime" />

        <one-to-one field="homeTeam" target-entity="UsaRugbyStats\Competition\Entity\Competition\Match\MatchTeam" orphan-removal="true">
        	<join-column name="homeTeam" referenced-column-name="id" />
            <cascade>
                <cascade-persist />
            </cascade>
        </one-to-one>

        <one-to-one field="awayTeam" target-entity="UsaRugbyStats\Competition\Entity\Competition\Match\MatchTeam" orphan-removal="true">
        	<join-column name="awayTeam" referenced-column-name="id" />
            <cascade>
                <cascade-persist />
            </cascade>
        </one-to-one>

        <!-- @TODO location -->

		<!-- @TODO events -->

		<field name="status" type="string" length="1" />

		<!-- @TODO signatures -->

    </entity>

</doctrine-mapping>
