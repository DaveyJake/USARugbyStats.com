<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="UsaRugbyStats\Competition\Entity\Competition\Match\MatchTeam" table="competition_competition_match_team">

        <unique-constraints>
            <unique-constraint columns="match,team,type" />
        </unique-constraints>

        <id name="id" type="integer"><generator strategy="AUTO" /></id>

        <many-to-one field="match" target-entity="UsaRugbyStats\Competition\Entity\Competition\Match">
        	<join-column name="match" referenced-column-name="id" />
        </many-to-one>

        <many-to-one field="team" target-entity="UsaRugbyStats\Competition\Entity\Team">
        	<join-column name="team" referenced-column-name="id" />
        </many-to-one>

		<field name="type" type="string" length="1" />

        <one-to-many field="players" target-entity="UsaRugbyStats\Competition\Entity\Competition\Match\MatchTeamPlayer" mapped-by="team" orphan-removal="true">
            <cascade>
                <cascade-persist />
            </cascade>
        </one-to-many>

        <field name="score" type="integer" />

        <!-- @TODO events -->

    </entity>

</doctrine-mapping>
