<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="UsaRugbyStats\Application\Entity\Team" table="teams">
    
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="hidden" type="integer" />
        <field name="userCreate" column="user_create" type="string" length="64" />
        <field name="uuid" column-definition="CHAR(36) NULL DEFAULT NULL" />
        <field name="name" type="string" length="60" />
        <field name="short" type="string" length="60" />
		<field name="resources" type="blob" />
    	<field name="logoUrl" column="logo_url" type="string" length="1024" nullable="true" />
    	<field name="description" type="string" length="1024" nullable="true" />
    	<field name="type" type="string" length="64" nullable="true" />
    	<field name="status" type="string" length="10" />
    	<field name="groupAboveUuid" column="group_above_uuid" column-definition="CHAR(36) NULL DEFAULT NULL" />
    </entity>

</doctrine-mapping>