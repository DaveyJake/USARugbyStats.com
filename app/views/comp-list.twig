<table class='table table-hover'>
 <tr>
    {% for competition in competitionrows %}
        <td>{{ competition.compnamelink|raw }}</td>
            {% if competition.canedit %}
                <td>
                  <div class="btn-group pull-right">
                    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><i class="icon-cog"></i><span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                      <!-- dropdown menu links -->
                      <li><a href="add_comp.php?id={{competition.id}}"><i class="icon-pencil"></i> Edit</a></li>
                      <li><a href='#' class='hidec' id='hComp{{competition.id}}' data-hide-comp-id='{{competition.id}}'> <i class='icon-remove'></i> Hide</a></li>
                      <li class="divider"></li>
                      <li class="nav-header">iframes</li>
                      <li><a href="#standings-{{competition.id}}-modal" data-toggle="modal" data-comp-id="{{competition.id}}">Standings</a></li>
                      <li><a href="#competitions-{{competition.id}}-modal" data-toggle="modal" data-comp-id="{{competition.id}}">Competition Schedule</a></li>
                    </ul>
                    <form style='margin: 0px; padding: 0px;' name='hForm{{competition.id}}' id='hForm{{competition.id}}'>
                      <input type='hidden' class='hId' name='comp_id' id='comp_id' value='{{competition.id}}' />
                      <input type='hidden' name='comprefresh' id='comprefresh' value='comp_list.php' />
                    </form>
                 </div>
               </td>
                 {{ competition.standingsiframe|raw }}
                 {{ competition.competitioniframe|raw }}
           {% else %}
               <td></td>
           {% endif %}
 </tr>
    {% endfor %}
</table>